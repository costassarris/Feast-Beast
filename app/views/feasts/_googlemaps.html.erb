<script type="text/javascript">
var map, pointarray, heatmap;
var markers = [];
var foodMarkers = [];
var icons ={
      food: { icon: 'http://www.familyvacationhub.com/wp-content/uploads/leaflet-maps-marker-icons/fast-food.png'},
      volcano: { icon: 'http://maps.google.com/mapfiles/kml/shapes/volcano.png'},
      caution: { icon: 'http://maps.google.com/mapfiles/kml/shapes/caution.png'},
      fire: { icon: 'http://maps.google.com/mapfiles/kml/shapes/firedept.png'},
      mountain: { icon: 'http://maps.google.com/mapfiles/kml/shapes/mountains.png'},
      airport: { icon: 'http://maps.google.com/mapfiles/kml/shapes/airports.png'},
      zombie: { icon: 'http://a.deviantart.net/avatars/z/o/zombie-astronaut.gif?4'}
    };

function initialize() {
  var mapOptions = {
    zoom: 13,
    center: new google.maps.LatLng(51.5073509, -0.1277583),
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };

  map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);

  map.setOptions({styles: nightStyle});

  <% @feasts.each do |feast| %>
    var myLatlng = new google.maps.LatLng( <%= feast.latitude.to_f %> , <%= feast.longitude.to_f %> );
    var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        markerID: <%= feast.id %>,
        icon: icons['<%= feast.icon %>'].icon
    });
    marker.category = '<%= feast.category %>';
    marker.location = myLatlng;
    marker.weight = <%= feast.average_rating.to_i %>;
    markers.push(marker);
    google.maps.event.addListener(marker,'click', (function(marker){
        return function() {
            show_me("<%= feast.id %>");
        };
    })(marker));
  <% end %>

  buildPointArray(markers.map(filterDinner));

  heatmap.set('radius', 50)
  hideMarkers('Zombie');
  hideMarkers('Lunch');
  heatmapOn();
}

function buildPointArray(markers) {
  pointArray = new google.maps.MVCArray(markers);

  heatmap = new google.maps.visualization.HeatmapLayer({
    data: pointArray
  });

  heatmap.setMap(map);
}

function removeHeatmap() {
  heatmap.setMap(null);
}

function toggleHeatmap() {
  heatmap.setMap(heatmap.getMap() ? null : map);
}

function heatmapOff() {
  heatmap.setMap(null);
}

function heatmapOn() {
  heatmap.setMap(map);
}

function blueGradient() {
  var gradient = [
    'rgba(0, 255, 255, 0)',
    'rgba(0, 255, 255, 1)',
    'rgba(0, 191, 255, 1)',
    'rgba(0, 127, 255, 1)',
    'rgba(0, 63, 255, 1)',
    'rgba(0, 0, 255, 1)',
    'rgba(0, 0, 223, 1)',
    'rgba(0, 0, 191, 1)',
    'rgba(0, 0, 159, 1)',
    'rgba(0, 0, 127, 1)',
    'rgba(63, 0, 91, 1)',
    'rgba(127, 0, 63, 1)',
    'rgba(191, 0, 31, 1)',
    'rgba(255, 0, 0, 1)'
  ]
  heatmap.set('gradient', gradient);
}

function changeRadius() {
  heatmap.set('radius', heatmap.get('radius') ? null : 20);
}

function changeOpacity() {
  heatmap.set('opacity', heatmap.get('opacity') ? null : 0.2);
}

function filterLunch(marker) {
  if (marker.category == 'Lunch') return marker;
}

function filterDinner(marker) {
  if (marker.category == 'Dinner') return marker;
}

function filterZombie(marker) {
  if (marker.category == 'Zombie') return marker;
}

google.maps.event.addDomListener(window, 'load', initialize);
</script>