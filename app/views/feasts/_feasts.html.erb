<div>
  <% if @feasts.any? %>
    <% @feasts.each do |feast| %>
      <div id='<%= feast.id %>' class='hidden feast-list'>
        <h1><%= link_to feast.name, feast_path(feast) %></h1>
        <h3><%= feast.description %></h3>
        <% if !feast.yelp_id.nil? %>
          <%= image_tag Yelp.client.business(feast.yelp_id).image_url %>
        <% elsif feast.image? %>
          <%= image_tag feast.image.url(:thumb) %>
        <% end %>
        <% if feast.reviews.any? %>
          <h3>Average rating: <%= star_rating(feast.average_rating) %></h3>
        <% else %>
          <h3>Average rating: No ratings yet </h3>
    <% end %>
      <% if user_signed_in? %>
        <% if feast.user_id == @user.id %>
          <p><%= link_to "Edit #{feast.name}", edit_feast_path(feast) %></p>
          <p><%= link_to "Delete #{feast.name}", feast_path(feast), method: :delete %></p>

          <% if feast.yelp_id.nil? %> 
            No yelp content
          <% else %>
            Yelp content linked
          <% end %>
          <%= link_to "Add yelp details", yelp_path(feast)%>
          <% if !feast.instagram_user.nil? %> 
            <%= link_to "Confirm instagram account", instagram_path(feast)%>
          <% end %>

        <% end %>
        <p><%= link_to "Review #{feast.name}", new_feast_review_path(feast) %></p>
      <% else %>
        (log in to leave a review)
      <% end %>
        <% if feast.reviews.any? %>
          <ul>
            <% feast.reviews.each do |review| %>
              <li><%= review.thoughts %> <%= star_rating(review.rating) %><%= %><%= link_to " â˜“", feast_review_path(feast,review), method: :delete  %></li>
            <% end %>
          </ul>
        <% elsif feast.yelp_id.nil? %>
          <p>No Reviews.</p>
        <% else %>=
          <%= Yelp.client.business(feast.yelp_id).snippet_text %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <h1>No feasts yet</h1>
  <% end %>
</div>